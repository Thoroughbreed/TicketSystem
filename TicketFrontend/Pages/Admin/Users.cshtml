@page
@model TicketFrontend.Pages.Admin.Users

<div class="container">
    <div class="row">
        <div class="col-8">
            <div class="row">
                <H3>Brugere</h3></div>
            <div class="row">
                <table class="table table-striped">
                    <thead>
                    <th>Initialer</th>
                    <th>Navn</th>
                    <th>E-Mail</th>
                    <th>Rolle</th>
                    <th>Antal sager</th>
                    <th>Oprettet d.</th>
                    <th></th>
                    </thead>
                    @foreach (var item in @Model.UserList)
                    {
                        <tr>
                            <td>@item.display_name</td>
                            <td>@item.full_name</td>
                            <td>@item.email</td>
                            <td>@item.Role.Rolename</td>
                            <td>
                                @if (item.Subscriptions != null)
                                {
                                    @item.Subscriptions.Count
                                }
                                else
                                {
                                    @:0
                                }
                            </td>
                            <td>@item.Created_At.ToString("d")</td>
                            <td>
                                <button type="button"
                                        class="btn btn-primary"
                                        data-bs-toggle="modal"
                                        data-bs-target="#editModal"
                                        data-id="@item.ID"
                                        data-fn="@item.full_name"
                                        data-dn="@item.display_name"
                                        data-rid="@item.RoleID">
                                    Detaljer
                                </button>
                            </td>
                        </tr>
                    }
                </table>
            </div>
            <div class="row">
                <button type="button"
                        class="btn btn-outline-success text-black"
                        data-bs-toggle="modal"
                        data-bs-target="#editModal">
                    Opret bruger
                </button>
            </div>
            <div class="row">
                <p>
                    @if (Model.User != null)
                    {
                        @Model.User.full_name
                    }
                    else 
                    {
                        @:Ingen fundet 
                    }
                </p>
            </div>
        </div>
    </div>
    
    
    <!-- MODAL EDIT/CREATE -->
    <form asp-page-handler="EditModal" method="post">
        <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Edit item</h5>
                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <input class="item-id" type="hidden" asp-for="@Model.User.ID"/>
                        <div class="form-group">
                            <label asp-for="@Model.User.full_name"></label>
                            <input asp-for="@Model.User.full_name" class="form-control item-fName"/>
                            <span asp-validation-for="@Model.User.full_name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.User.display_name"></label>
                            <input class="item-dName form-control" asp-for="@Model.User.display_name"/>
                            <span asp-validation-for="@Model.User.display_name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.User.RoleID"></label>
                            <select asp-for="User.RoleID" asp-items="@(new SelectList(Model.Roles, "ID", "Rolename"))" class="item-roleID">
                            </select>
                            <span asp-validation-for="@Model.User.RoleID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Anuller</button>
                        <button type="submit" class="btn btn-primary">Gem</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section scripts{
    <partial name="_ValidationScriptsPartial" />
}