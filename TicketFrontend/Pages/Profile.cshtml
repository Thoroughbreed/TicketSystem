@page "{id?}"
@model TicketFrontend.Pages.Profile

@if (Model.User == null)
{
    <div class="row">
        <div class="col-6">
            <H3>Ingen bruger fundet - hvad gjorde du?!</H3>
        </div>
    </div>    
}
else {
    <h2>@Model.User.full_name</h2>

    <dl class="row">
        <dt class="col-sm-2">
            E-Mail
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.email)
        </dd>
        <dt class="col-sm-2">
            Initialer
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.display_name)
        </dd>
        <dt class="col-sm-2">
            Brugerrolle
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Role.Rolename)
        </dd>
    </dl>
    <div class="row">
        <div class="col-1">
            <button type="button"
                    class="btn btn-outline-success"
                    data-bs-toggle="modal"
                    data-bs-target="#editModal"
                    data-id="@Model.User.ID"
                    data-fn="@Model.User.full_name"
                    data-dn="@Model.User.display_name">
                Rediger
            </button>
        </div>
    </div>
    
    
     <!-- MODAL EDIT/CREATE -->
    <form asp-page-handler="EditUser" method="post">
        <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Edit item</h5>
                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <input class="item-id" type="hidden" asp-for="@Model.User.ID"/>
                        <div class="form-group">
                            <label asp-for="@Model.User.full_name"></label>
                            <input asp-for="@Model.User.full_name" class="form-control item-fName"/>
                            <span asp-validation-for="@Model.User.full_name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.User.display_name"></label>
                            <input class="item-dName form-control" asp-for="@Model.User.display_name"/>
                            <span asp-validation-for="@Model.User.display_name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.User.password"></label>
                            <input class="form-control" asp-for="@Model.Password" type="password" />
                            <input class="form-control" asp-for="@Model.ConfirmPassword" type="password" />
                            <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Anuller</button>
                        <button type="submit" class="btn btn-primary">Gem</button>
                    </div>
                </div>
            </div>
        </div>
    </form>

@section scripts{
    <partial name="_ValidationScriptsPartial" />
}
}