@page
@using TicketFrontend.Service
@model TicketFrontend.Pages.Tickets
@{
    ViewData["Title"] = "Tickets";
}


<div class="text-center">
    <h1 class="display-4">Open tickets</h1>
        <form method="get" id="searchForm">
            <div class="row">
                <div class="row">
                    <div class="col-8">
                        
                    </div>
                    <div class="col-2">
                        <label asp-for="orderOptions">Sorter på:</label>
                    </div>
                    <div class="col-2">
                        <label asp-for="onlyMine">Kun mine tickets:</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-group mb-3 col-8">
                        <input type="search" asp-for="Search" class="form-control" placeholder="Søg på titel eller beskrivelse">
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary" type="submit">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                        <div class="input-group-append col-2">
                            <select asp-for="orderOptions" asp-items="Html.GetEnumSelectList<TicketOrderOptions>()" class="accordion" onchange="searchForm.submit()"></select>
                        </div>
                        <div class="input-group-append col-2">
                            <input type="checkbox" asp-for="onlyMine"/>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    <table class="table table-striped">
        <thead>
        <th>ID</th>
        <th>Titel</th>
        <th>Beskrivelse</th>
        <th>Oprettet den</th>
        @* <th>Anmoder</th> *@
        <th>Prioritet</th>
        <th>Kategori</th>
        <th>Status</th>
        <th colspan="2">
            <a asp-page="Print/Open">
                <i class="fa fa-print"></i>
            </a>
        </th>
        </thead>
        @foreach (var item in @Model.FoundTickets)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.TCaption</td>
                <td>
                    @if (item.TDesc.Length > 40)
                    {
                        @item.TDesc[0..Math.Min(@item.TDesc.Length, 35)]@: ...
                    }
                    else
                    {
                        @item.TDesc
                    }
                </td>
                <td>@item.TCreatedAt</td>
                @* <td>@item.Requester.full_name</td> *@
                <td>@item.Priority.priority</td>
                <td>@item.Category.category</td>
                <td>@item.Status.status</td>
                <td>
                    <a asp-page="Detail" class="btn btn-outline-info" asp-route-ticketId="@item.ID">Detaljer</a>
                </td>
                <td>
                    @if (User.HasClaim("https://tved.it/accessToken/roles", "TicketWrite"))
                    {
                        <a asp-page="Tickets" class="btn btn-outline-danger" asp-page-handler="CloseTaskDebug" asp-route-ticketId="@item.ID" asp-route-userId="5">Tvangs luk</a>
                    }
                </td>
            </tr>
        }
    </table>
    @if (Model.PageCount > Model.PageSize)
    {
        <ul class="pagination">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrPage ? "active" : "")">
                    <a asp-page="./Tickets" class="page-link" asp-all-route-data="@(new Dictionary<string, string>{
                                                                                       { "CurrPage", @i.ToString() },
                                                                                      { "Search", Model.Search },
                                                                                      { "orderOptions", Model.orderOptions.ToString() },
                                                                                      { "onlyMine", Model.onlyMine.ToString() }
                })">@i</a>
            </li>
            }
        </ul>
    }
</div>