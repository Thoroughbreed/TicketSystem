
@page
@{
    ViewData["Title"] = "Profile page";
}
@using System.Security.Claims
@model TicketFrontend.Pages.UserProfile


<div class="text-center">
    <h1 class="display-4">@User.Identity.Name</h1>
    <p class="display-2">@User.Identity.AuthenticationType</p>
    <p class="display-2">@User.Claims.FirstOrDefault(t => t.Type == ClaimTypes.Email)?.Value</p>
    <p class="display-2">@User.Claims.FirstOrDefault(c => c.Type == "https://tved.it/accessToken/roles")!.Value</p>
    <img src="@User.Claims.FirstOrDefault(t => t.Type == "picture")?.Value" />
    <hr/>
    @foreach (var claim in @User.Claims)
    {
        <p>@claim.Type - @claim.Value - @claim.ValueType</p>
    }
</div>